<script src="{{ 'image-cards.js' | asset_url }}" defer="defer"></script>
{% liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_tablet = 3
  if columns_desktop < 3
    assign columns_tablet = columns_desktop
  endif
  assign columns_laptop = 4
  if columns_desktop < 4
    assign columns_laptop = columns_desktop
  endif
  assign columns_mobile = section.settings.columns_mobile | plus: 0

  assign enable_slider = section.settings.enable_slider

  assign enable_swipe_mobile = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile
    assign enable_swipe_mobile = true
  endif

  if section.blocks.size <= columns_desktop
    assign enable_slider = false
  endif

  assign navigation_position = section.settings.navigation_position
  assign pagination_type = 'progressbar'
%}
{%- capture image_sizes -%}
(max-width: 767px) calc((100vw - 30px) / {{ columns_mobile }}),
(max-width: 1023px) calc((100vw - 30px) / {{ columns_tablet }}),
calc( min(100vw, {{ settings.page_width }}px) / {{ columns_desktop }})
{%- endcapture -%}
{% style %}
  .section-{{ section.id }} {
  --section-padding-top: {{ section.settings.padding_top }}px;
  --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  --f-columns-mobile: {{ columns_mobile }};
  --f-columns-md: {{ columns_tablet }};
  --f-columns-xl: {{ columns_desktop }};
  }
{% endstyle %}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div class="section section-{{ section.id }} section--padding image-cards page-width page-width--{{ section.settings.container }} color-{{ section.settings.color_scheme }}">
  {%- render 'section-heading', section_settings: section.settings, description_size: section.settings.description_size -%}
  <div class="section__content relative{% if navigation_position == 'middle' %} swiper-show-nav-on-hover{% endif %}">
    <image-cards
      class="block relative{% if enable_slider %} swiper swiper-equal-height{% if section.settings.content_overflow %} overflow-visible{% endif %}{% endif %}{% if enable_swipe_mobile %} swipe-mobile swipe-mobile--{{ section.settings.columns_mobile }}-cols{% endif %}"
      id="image-cards-{{ section.id }}"
      data-section-id="{{ section.id }}"
      {% if enable_slider %}
        data-enable-slider="true"
        data-items="{{ columns_desktop }}"
        data-tablet-items="{{ columns_tablet }}"
        data-laptop-items="{{ columns_laptop }}"
        data-pagination-type="{{ pagination_type }}"
      {% endif %}
    >
      <div class="image-cards__inner f-grid f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }}{% if enable_slider %} swiper-wrapper{% endif %}{% if enable_swipe_mobile %} swipe-mobile__inner{% endif %}">
        {%- for block in section.blocks -%}
          <div
            class="f-column swiper-slide"
            {{ block.shopify_attributes }}
            data-index="{{ forloop.index0 }}"
          >
            {% render 'card-image',
              parent_color_scheme: section.settings.color_scheme,
              color_scheme: block.settings.color_scheme,
              color_scheme_mobile: block.settings.color_scheme_mobile,
              link: block.settings.card_link,
              image: block.settings.image,
              image_ratio: block.settings.image_ratio,
              image_overlay_opacity: block.settings.image_overlay_opacity,
              image_mobile: block.settings.image_mobile,
              image_sizes: image_sizes,
              heading: block.settings.heading,
              highlight_style: block.settings.highlight_style,
              highlight_font_style: block.settings.highlight_font_style,
              highlight_style_color: block.settings.highlight_style_color,
              highlight_text_color: block.settings.highlight_text_color,
              heading_size: block.settings.heading_size,
              subheading: block.settings.subheading,
              subheading_style: block.settings.subheading_style,
              description: block.settings.description,
              button_label: block.settings.button_label,
              button_style: block.settings.button_style,
              button_icon: block.settings.button_icon,
              rich_text_size: block.settings.content_gap,
              content_spacing: block.settings.content_spacing,
              content_position: block.settings.content_position,
              content_alignment: block.settings.content_alignment,
              content_alignment_mobile: block.settings.content_alignment_mobile,
              show_text_below: block.settings.show_text_below,
              show_badge: block.settings.show_badge,
              badge_size: 'medium',
              badge_shape: block.settings.badge_shape,
              badge_position: block.settings.badge_position,
              badge_main_text: block.settings.badge_text,
              badge_main_text_size: 'h3',
              badge_subtext: block.settings.badge_subtext,
              badge_subtext_size: 'h6',
              badge_color_scheme: block.settings.badge_color_scheme,
              enable_preload_image: block.settings.enable_preload_image,
              section_index: section.index,
              forloop_index: forloop.index,
              heading_size_custom: block.settings.heading_size_custom,
              heading_size_mobile: block.settings.heading_size_mobile
            %}
          </div>
        {%- endfor -%}
      </div>
    </image-cards>
    {%- if enable_slider -%}
      <div class="swiper-controls{% if navigation_position == 'bottom' %} swiper-controls--grouped{% elsif navigation_position == 'middle' %} swiper-controls--nav-floating{% endif %} swiper-controls--pagination-{{ pagination_type }} hidden md:flex">
        <button
          class="swiper-button swiper-button-prev btn{% if navigation_position == 'middle' %} swiper-button--drop-shadow{% endif %}"
          name="previous"
          aria-label="{{ 'general.slider.previous_slide' | t }}"
        >
          <span class="btn__text"> {% render 'icon-caret-left' %}</span>
        </button>
        {% if navigation_position == 'bottom' %}<div class="swiper-pagination"></div>{% endif %}
        <button
          class="swiper-button swiper-button-next btn{% if navigation_position == 'middle' %} swiper-button--drop-shadow{% endif %}"
          name="next"
          aria-label="{{ 'general.slider.next_slide' | t }}"
        >
          <span class="btn__text"> {% render 'icon-caret-right' %}</span>
        </button>
      </div>
    {%- endif -%}
    {%- if pagination_type == 'progressbar' and enable_swipe_mobile and section.settings.show_progress_bar -%}
      <scroll-progress-bar class="md:hidden" target="image-cards-{{ section.id }}">
        <div class="progress-container">
          <div class="progress-bar no-empty"></div>
        </div>
      </scroll-progress-bar>
    {%- endif -%}
  </div>
</div>
