{%- liquid
  assign featured_product = section.settings.product

  assign media_layout = 'vertical-carousel'
  assign mobile_thumbnails = section.settings.mobile_thumbnails | default: 'hide'
  assign enable_image_zoom = section.settings.enable_image_zoom | default: false
  assign enable_sticky_info = section.settings.enable_sticky_info

  assign product_class = 'product--mobile-thumbs-' | append: mobile_thumbnails
  assign product_class = product_class | append: ' product--' | append: section.settings.media_size
  assign product_class = product_class | append: ' product--' | append: media_layout

  if featured_product != blank
    assign product_class = product_class | append: ' product--media-has-' | append: featured_product.media.size
    if featured_product.media.size > 1
      assign product_class = product_class | append: ' product--media-has-many'
    endif
  else
    assign product_class = product_class | append: ' product--media-has-1'
  endif
  if section.settings.show_image_border
    assign product_class = product_class | append: ' product--media-has-border'
  endif
-%}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  id="FeaturedProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  class="featured-product section section-{{ section.id }} section--padding page-width page-width--{{ section.settings.container }} color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {% unless featured_product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- assign has_models = featured_product.media | where: 'media_type', 'model' | first -%}
  {%- if has_models -%}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}
  {%- if enable_image_zoom -%}
    <link
      id="Photoswipe"
      rel="stylesheet"
      href="{{ 'photoswipe-component.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  {%- if featured_product.quantity_price_breaks_configured? -%}
    {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>

  {% assign variant_images = featured_product.images | where: 'attached_to_variant?', true | map: 'src' %}
  <product-info
    data-section="{{ section.id }}"
    data-product-id="{{ featured_product.id }}"
    data-update-url="false"
    data-url="{{ featured_product.url }}"
    class="product flex flex-wrap {{ product_class }}"
  >
    <div class="product__media-wrapper block w-full relative">
      <div class="product__media-container{% if enable_sticky_info %} sticky-element{% endif %}">
        {%- if featured_product != blank -%}
          {% render 'product-media-gallery',
            product: featured_product,
            media_layout: media_layout,
            mobile_thumbnails: mobile_thumbnails,
            variant_images: variant_images,
            enable_image_zoom: enable_image_zoom
          %}
        {%- else -%}
          <div class="media-wrapper bg-none blocks-radius" style="--aspect-ratio: 1/1;">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="product__info-wrapper w-full block">
      {%- if featured_product != blank -%}
        {% render 'product-information-blocks',
          section: section,
          product: featured_product,
          enable_sticky_info: enable_sticky_info,
          show_details_link: true,
          update_browser_history: false
        %}
      {%- else -%}
        <div class="product__info-container{% if enable_sticky_info %} sticky-element{% endif %}">
          <div class="product__blocks">
            <div class="product__block product__block--title">
              <h2 class="product__title h1">
                {{- 'onboarding.product_title' | t -}}
              </h2>
            </div>
            <div class="product__block product__block--price">
              {% render 'price', price_class: 'f-price--large' %}
              {%- if shop.taxes_included -%}
                <div class="f-product-single__block-tax text-subtext">
                  {{- 'products.product.include_taxes' | t -}}
                </div>
              {%- endif -%}
            </div>
            <div class="product__block product__block--description rte">
              {{ 'onboarding.product_description' | t }}
            </div>
            <div class="product__block product__block--buy_buttons">
              <div class="product-form__buttons flex flex-wrap items-end gap-x-2 gap-y-4">
                {% render 'quantity-input', section_id: section.id, min: 1 %}
                <button type="submit" class="product-form__submit btn btn--secondary">
                  <span class="btn__text">{{ 'products.product.add_to_cart' | t }}</span>
                </button>
                <div class="w-full">
                  <button type="submit" class="w-full btn btn--primary">
                    <span class="btn__text">{{ 'products.product.buy_it_now' | t }}</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}
    </div>
  </product-info>

  {%- if enable_image_zoom -%}
    <script src="{{ 'photoswipe.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- if featured_product.media.size > 0 -%}
    <script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- if has_models -%}
    <script type="application/json" id="ProductJSON-{{ featured_product.id }}">
      {{ featured_product.media | where: 'media_type', 'model' | json }}
    </script>
    <script src="{{ 'product-model.js' | asset_url }}" defer></script>
  {%- endif -%}

  <script type="application/ld+json">
    {{ featured_product | structured_data }}
  </script>
</div>

