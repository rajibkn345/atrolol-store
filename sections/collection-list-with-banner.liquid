{{ 'section-collection-list-with-banner.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign banner_block = section.blocks | find: 'type', 'image_card'
  assign collection_block = section.blocks | where: 'type', 'featured_collection'
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign enable_swipe_mobile = false
  if section.settings.swipe_on_mobile and collection_block.size > columns_mobile_int
    assign enable_swipe_mobile = true
  endif

  assign image = banner_block.settings.image
  assign image_mobile = banner_block.settings.image_mobile
  assign image_ratio = image.aspect_ratio | default: '2.333'
  assign image_mobile_ratio = image_mobile.aspect_ratio | default: '1'
  assign columns_desktop = section.settings.columns_desktop
  assign tablet_items = columns_desktop | at_most: 2
  assign laptop_items = columns_desktop | at_most: 5

  assign button_style = section.settings.button_style
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link
  assign button_icon = section.settings.button_icon
-%}

{% style %}
  .section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --f-columns-mobile: {{ columns_mobile_int }};
    --f-columns-md: {{ tablet_items }};
    --f-columns-lg: {{ laptop_items }};
    --f-columns-xl: {{ columns_desktop }};
  }
{% endstyle %}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div class="section section-{{ section.id }} section--padding collection-list-banner color-{{ section.settings.color_scheme }}">
  <div class="section__container page-width page-width--{{ section.settings.container }}">
    <div class="section__wrapper">
      {% render 'section-heading',
        section_settings: section.settings,
        description_size: section.settings.text_size,
        button_visible: true,
        button_link: button_link,
        button_style: button_style,
        button_icon: button_icon,
        button_label: button_label
      %}
      <div class="section__content{% if banner_block %} f-flex flex-col lg:flex-row f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }}{% endif %}{% if section.settings.grid_bordered %} grid-bordered blocks-radius{% endif %}">
        {% if banner_block %}
          <div class="f-column w-full lg:w-2/5 col__image-cards">
            {% render 'card-image',
              parent_color_scheme: section.settings.color_scheme,
              color_scheme: banner_block.settings.color_scheme,
              color_scheme_mobile: banner_block.settings.color_scheme_mobile,
              link: banner_block.settings.card_link,
              image: image,
              image_mobile: image_mobile,
              image_ratio: image_ratio,
              image_mobile_ratio: image_mobile_ratio,
              image_overlay_opacity: banner_block.settings.image_overlay_opacity,
              heading: banner_block.settings.heading,
              highlight_style: banner_block.settings.highlight_style,
              highlight_font_style: banner_block.settings.highlight_font_style,
              highlight_style_color: banner_block.settings.highlight_style_color,
              highlight_text_color: banner_block.settings.highlight_text_color,
              heading_size: banner_block.settings.heading_size,
              subheading: banner_block.settings.subheading,
              subheading_style: banner_block.settings.subheading_style,
              description: banner_block.settings.description,
              button_label: banner_block.settings.button_label,
              button_style: banner_block.settings.button_style,
              button_icon: banner_block.settings.button_icon,
              rich_text_size: banner_block.settings.content_gap,
              content_spacing: banner_block.settings.content_spacing,
              content_position: banner_block.settings.content_position,
              content_alignment: banner_block.settings.content_alignment,
              content_alignment_mobile: banner_block.settings.content_alignment_mobile,
              show_badge: banner_block.settings.show_badge,
              badge_size: 'medium',
              badge_shape: banner_block.settings.badge_shape,
              badge_position: banner_block.settings.badge_position,
              badge_main_text: banner_block.settings.badge_text,
              badge_main_text_size: 'h3',
              badge_subtext: banner_block.settings.badge_subtext,
              badge_subtext_size: 'h6',
              badge_color_scheme: banner_block.settings.badge_color_scheme,
              enable_preload_image: banner_block.settings.enable_preload_image,
              section_index: section.index,
              heading_size_custom: banner_block.settings.heading_size_custom,
              heading_size_mobile: banner_block.settings.heading_size_mobile
            %}
          </div>
        {% endif %} 
        <div class="f-column w-full flex-1" data-section-id="{{ section.id }}">
          <div class="collection-list__inner{% if section.settings.grid_bordered %} h-full{% endif %}{% if enable_swipe_mobile %} swipe-mobile swipe-mobile--{{ section.settings.columns_mobile }}-cols{% endif %}">
            <div class="collection-list__items h-full f-grid f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }}{% if enable_swipe_mobile %} swipe-mobile__inner{% endif %}">
              {%- for block in collection_block -%}
                {%- liquid
                  assign collection = collections[block.settings.collection]
                  assign title = block.settings.title
                  assign collection_title = title | default: collection.title
                  assign default_label = 'onboarding.collection_title' | t
                  assign collection_title_default = collection_title | default: default_label
                  assign featured_image = block.settings.image
                  unless featured_image
                  if collection.image
                    assign featured_image = collection.image
                  else
                    assign featured_image = collection.products.first.featured_media.preview_image
                  endif
                  endunless
                  assign image_ratio = section.settings.card_image_ratio | default: 'adapt'
                  if image_ratio == 'adapt'
                    if featured_image != blank
                      assign image_ratio = featured_image.aspect_ratio
                    else
                      assign image_ratio = '1'
                    endif
                  endif
                  assign mod_desktop = forloop.index | modulo: columns_desktop
                  assign mod_laptop = forloop.index | modulo: laptop_items
                  assign mod_tablet = forloop.index | modulo: tablet_items
                  assign mod_mobile = forloop.index | modulo: columns_mobile_int
                  assign classes = ''
                  if mod_desktop == 0 and section.settings.grid_bordered
                    assign classes = classes | append: ' desktop-hide-border'
                  endif
                  if mod_laptop == 0 and section.settings.grid_bordered
                    assign classes = classes | append: ' laptop-hide-border'
                  endif
                  if mod_tablet == 0 and section.settings.grid_bordered
                    assign classes = classes | append: ' tablet-hide-border'
                  endif
                  if mod_mobile == 0 and section.settings.grid_bordered and enable_swipe_mobile == false
                    assign classes = classes | append: ' mobile-hide-border'
                  endif
                -%}
                <div
                  class="f-column"
                  {{ block.shopify_attributes }}
                  data-index="{{ forloop.index0 }}"
                >
                  <div class="collection-card collection-card--boxed collection-card--has-bg color-{{ section.settings.card_color_scheme }} blocks-radius">
                    <a
                      {% if collection != blank %}
                        href="{{ collection.url }}"
                      {% else %}
                        role="link" aria-disabled="true"
                      {% endif %}
                      class="collection-card__wrapper relative flex items-stretch justify-between gap-1 focus-inset btn-hover-wrapper"
                      {% unless featured_image != blank %}
                        aria-label="{{ collection_title_default }}"
                      {% endunless %}
                    >
                      <div class="collection-card__image media-wrapper hover-wrapper{% if section.settings.rounded_card_image %} rounded{% else %} blocks-radius{% endif %}">
                        <motion-element data-motion="zoom-out-sm" class="block" style="--aspect-ratio: {{ image_ratio }};">
                          {%- if featured_image != blank -%}
                            {%- liquid
                              assign image_widths = '60, 70, 80, 100, 120, 140, 160, 240, 320, 450, 535, 710, 800, 900,' | append: featured_image.width
                              assign alt_image = featured_image.alt | default: collection_title_default | escape
                            -%}
                            {{
                              featured_image
                              | image_url: width: featured_image.width
                              | image_tag:
                                loading: 'lazy',
                                class: 'motion-reduce hover-scale-up',
                                widths: image_widths,
                                sizes: '(max-width:767px) 60px, 100px',
                                is: 'image-lazy',
                                alt: alt_image
                            }}
                          {%- else -%}
                            <div class="collection-card__placeholder hover-scale-up">
                              {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
                              {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          {%- endif -%}
                        </motion-element>
                      </div>
                      <div class="collection-card__inner flex flex-col justify-between pointer-events-none">
                        <h3 class="collection-card__title h6 text-limit-1-line">
                          <span>
                            {{- collection_title_default -}}
                          </span>
                        </h3>
                        <p class="text-base text-subtext m-0">
                          {{ collection.all_products_count | default: 0 }}
                          {{ 'collections.general.items' | t }}
                        </p>
                      </div>
                    </a>
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

