{{ 'section-layered-images-with-text.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign container = section.settings.container
  assign image_blocks = section.blocks | where: 'type', 'image'

  assign motion_delay = 0
  assign has_richtext = false
  if section.settings.heading != blank or section.settings.description != blank or section.settings.subheading != blank
    assign has_richtext = true
  endif

  assign header_alignment = section.settings.section_header_alignment
  assign header_alignment_mobile = section.settings.section_header_alignment_mobile
  if header_alignment_mobile == 'inherit'
    assign header_alignment_mobile = header_alignment
  endif

  assign header_empty = true
  if has_richtext
    assign header_empty = false
  endif
-%}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if container == 'full' -%}
    --padding-x: var(--page-padding);
    {%- endif -%}
  }
</style>

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div class="section section-{{ section.id }}{% unless container == 'full' %} page-width{% endunless %}">
  <div
    class="layered-images-with-text relative z-0 blocks-radius color-{{ section.settings.color_scheme }}"
    data-section-id="{{ section.id }}"
  >
    <div class="layered-images-with-text__wrapper section--padding flex flex-col relative">
      {%- unless header_empty -%}
        <div class="section__header s__header layered-images-with-text__header z-3 rich-text md:text-{{ header_alignment }} text-{{ header_alignment_mobile }} flex flex-col items-{{ header_alignment_mobile | replace: 'left', 'start' | replace: 'right', 'end' }} md:items-center{% unless header_alignment == 'center' %} md:flex-row{{ header_alignment | replace: 'left','' | replace: 'right','-reverse' }} gap-x-4{% endunless %}">
          {% if has_richtext %}
            <div class="section__header--text s__header--text rich-text flex-1">
              {% if section.settings.subheading != blank %}
                <motion-element
                  class="section__subheading rich-text__subheading block"
                  data-motion="fade-up"
                  data-motion-delay="{{ motion_delay }}"
                >
                  <span class="text-subheading {% if section.settings.subheading_style != 'none' %}subheading-style--{{ section.settings.subheading_style }}{% endif %} text-subtext inline-flex">
                    {{- section.settings.subheading -}}
                  </span>
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {% endif %}
              {% if section.settings.heading != blank %}
                <h2 class="rich-text__heading inline-richtext {{ section.settings.heading_size }}">
                  <motion-element data-motion="fade-up" data-motion-delay="{{ motion_delay }}" class="block">
                    {% render 'highlight-text',
                      hl_text: section.settings.heading,
                      hl_style: section.settings.highlight_style,
                      hl_font_style: section.settings.highlight_font_style,
                      hl_style_color: section.settings.highlight_style_color,
                      hl_text_color: section.settings.highlight_text_color
                    %}
                  </motion-element>
                </h2>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {% endif %}
              {% if section.settings.description != blank %}
                <motion-element
                  data-motion="fade-up"
                  data-motion-delay="{{ motion_delay }}"
                  class="block rich-text__text rte {{ section.settings.description_size }} text-subtext"
                >
                  {{- section.settings.description -}}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {% endif %}
              {%- if section.settings.button_label != blank -%}
                <motion-element
                  class="block"
                  data-motion-delay="{{ motion_delay }}"
                  data-motion="fade-up"
                >
                  {% render 'button',
                    button_style: section.settings.button_style,
                    button_link: section.settings.button_link,
                    button_label: section.settings.button_label,
                    button_icon: section.settings.button_icon
                  %}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- endif -%}
            </div>
          {% endif %}
        </div>
      {%- endunless -%}
      {%- if image_blocks.size > 0 -%}
        <div class="layered-images-with-text__images">
          <div class="h-full f-flex justify-center f-grid--gap-2xs f-grid--row-gap-inherit mobile-columns--3">
            {%- for block in section.blocks -%}
              {%- liquid
                assign block_image = block.settings.image
                assign block_image_mobile = block.settings.image_mobile

                if block_image == blank
                  assign image_ratio = '1/1'
                else
                  assign image_ratio = block_image.aspect_ratio
                endif

                if block_image_mobile == blank
                  assign image_mobile_ratio = image_ratio
                else
                  assign image_mobile_ratio = block_image_mobile.aspect_ratio
                endif

                assign image_width = block.settings.image_width | append: 'px'
                assign vertical = block.settings.image_desktop_vertical | append: '%'
                assign horizontal = block.settings.image_desktop_horizontal | append: '%'
              -%}
              <div
                class="float__image block f-column w-1/4 {% if block.settings.animation != 'none' %}{{ block.settings.animation }}{% endif %}"
                style="--image-width: {{ image_width }}; --top: {{ vertical }}; --left: {{ horizontal }}"
                {{ block.shopify_attributes }}
              >
                <motion-element class="block" data-motion="zoom-out-sm" data-motion-delay="{{ motion_delay }}">
                  <picture
                    class="media-wrapper blocks-radius overflow-hidden{% if block_image == blank %} bg-none{% endif %}"
                    style="--aspect-ratio: {{ image_ratio }};{% if image_mobile_ratio %}--aspect-ratio-mobile: {{ image_mobile_ratio }};{% endif %}"
                  >
                    {%- if block_image != blank -%}
                      {%- if block_image_mobile -%}
                        <source
                          media="(max-width: 767px)"
                          srcset="{{ block_image_mobile | image_url: width: '400x' }} 400w, {{ block_image_mobile | image_url: width: '600x' }} 600w, {{ block_image_mobile | image_url: width: '800x' }} 800w, {{ block_image_mobile | image_url: width: '1000x' }} 1000w"
                          width="{{ block_image_mobile.width }}"
                          height="{{ block_image_mobile.height }}"
                        >
                      {%- endif -%}
                      {% assign alt_image = block_image.alt | escape %}
                      {{
                        block_image
                        | image_url: width: 1100
                        | image_tag:
                          loading: 'lazy',
                          class: 'motion-reduce',
                          sizes: image_width,
                          widths: '165, 360, 535, 750, 940, 1100',
                          is: 'image-lazy',
                          class: 'absolute inset-0 w-full h-full',
                          alt: alt_image
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </picture>
                </motion-element>
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
