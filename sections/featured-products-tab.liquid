{%- style -%}
  .section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --f-columns-mobile: 1;
    --f-columns-md: 2;
  }
{%- endstyle -%}
{%- render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
-%}
<div
  class="section section-{{ section.id }} featured-products-tab section--padding color-{{ section.settings.color_scheme }}"
  data-id="{{ section.id }}"
>
  <div class="section__container page-width page-width--{{ section.settings.container }}">
    {%- if section.blocks.size > 0 -%}
      <tabs-component class="tabs" data-scroll-to-active-tab="true">
        <div class="tabs__header tabs__header_vertical">
          <div class="sticky-element z-10 lg:flex flex-col">
            {%- render 'section-heading', section_settings: section.settings, custom_css_class: 'w-full' -%}
            {%- if section.settings.button_label != blank -%}
              <motion-element
                class="section__header--buttons rich-text__button block"
                data-motion="fade-up"
              >
                {% render 'button',
                  button_style: section.settings.button_style,
                  button_link: section.settings.button_link,
                  button_label: section.settings.button_label,
                  button_icon: section.settings.button_icon
                %}
              </motion-element>
            {%- endif -%}
            <div
              class="tabs__nav tabs__nav-js swipe-mobile swipe-mobile--auto-cols no-js-hidden"
              role="tablist"
            >
              <motion-element class="block tabs__nav-inner" data-motion="fade-up">
                {%- for block in section.blocks -%}
                  {%- liquid
                    if block.settings.title != blank
                      assign tab_name = block.settings.title
                    else
                      assign tab_name = 'Tab ' | append: forloop.index
                    endif
                  -%}
                  <button
                    class="tabs__tab focus-inset btn btn--underline"
                    role="tab"
                    id="{{- block.id -}}"
                    {{ block.shopify_attributes }}
                  >
                    <span class="h5">{{- tab_name -}}</span>
                  </button>
                {%- endfor -%}
              </motion-element>
            </div>
          </div>
        </div>
        <div class="tabs__panel flex-1">
          {%- for block in section.blocks -%}
            {%- liquid
              assign products = blank
              assign products_to_show = false
              if block.settings.products != blank
                assign products = block.settings.products
              endif
              if products.count > 2
                assign products_to_show = true
              endif
            -%}
            <div
              class="tabs__content tabs__content-{{ block.id }}"
              id="tab-{{ block.id }}"
              data-index="{{ forloop.index0 }}"
              role="tabpanel"
              {%- unless forloop.first -%}
                hidden
              {%- endunless -%}
            >
              <div class="block{% if section.settings.swipe_on_mobile %} swipe-mobile swipe-mobile--1-cols{% endif %}">
                <grid-list class="f-grid{% if products_to_show %} f-masonry{% endif %} f-grid-2-cols f-grid--gap-2xs f-grid--row-gap-inherit{% if section.settings.swipe_on_mobile %} swipe-mobile__inner{% endif %}">
                  {%- for product in block.settings.products -%}
                    <div class="f-column">
                      {%- liquid
                        assign image_ratio = section.settings.pcard_image_ratio
                        assign product_showcase_image = product.metafields.foxtheme.showcase_image.value
                        assign product_showcase_title = product.metafields.foxtheme.showcase_title.value
                        assign featured_media = product.featured_media
                        if product_showcase_image == blank
                          assign product_showcase_image = featured_media
                        endif
                      -%}
                      {%- render 'card-image-with-product',
                        product: product,
                        image: product_showcase_image,
                        image_ratio: image_ratio,
                        heading: product_showcase_title,
                        heading_size: 'h3',
                        color_scheme: block.settings.color_scheme,
                        button_label: 'shop',
                        button_style: 'btn--primary'
                      -%}
                    </div>
                  {% else %}
                    {%- for i in (1..2) -%}
                      <div class="f-column">
                        {%- render 'card-image-with-product',
                          image_ratio: section.settings.pcard_image_ratio,
                          color_scheme: block.settings.color_scheme
                        -%}
                      </div>
                    {%- endfor -%}
                  {%- endfor -%}
                </grid-list>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </tabs-component>
    {%- endif -%}
  </div>
</div>
