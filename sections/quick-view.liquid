{%- liquid
  # Show the first product when it is not a product page.
  if request.page_type != 'product' and request.design_mode
    assign collection_all = collections.all
    assign product = collection_all.products | first
  endif

  assign quick_view_type = settings.quick_view_type
-%}
{%- if product != blank -%}
  {%- liquid
    assign media_layout = 'stacked'
    assign mobile_thumbnails = 'hide'
    assign enable_image_zoom = false
    assign enable_sticky_info = section.settings.enable_sticky_info

    if quick_view_type == 'modal'
      assign media_layout = 'vertical-carousel'
    endif

    assign product_class = 'product--mobile-thumbs-' | append: mobile_thumbnails
    assign product_class = product_class | append: ' product--' | append: section.settings.media_size
    assign product_class = product_class | append: ' product--' | append: media_layout
    assign product_class = product_class | append: ' product--media-has-' | append: product.media.size
    if product.media.size > 1
      assign product_class = product_class | append: ' product--media-has-many'
    endif
    if section.settings.show_image_border
      assign product_class = product_class | append: ' product--media-has-border'
    endif
  -%}
  <quick-view-modal
    id="MainProductQuickView-{{ section.id }}-{{ product.id }}"
    class="quick-view{% if quick_view_type == 'drawer' %} drawer drawer--right{% else %} modal drawer{% endif %}"
    data-product-url="{{ product.url }}"
    shopify-design-mode
    hidden
  >
    <div class="fixed-overlay" aria-controls="MainProductQuickView-{{ section.id }}-{{ product.id }}"></div>
    <div class="drawer__inner flex flex-col color-{{ settings.overlay_color_scheme }}">
      <div class="drawer__header-title md:hidden">
        <h3>{{ 'products.product.quick_view_title' | t }}</h3>
      </div>
      <button
        class="drawer__close-btn z-2"
        aria-label="{{ 'accessibility.close' | t }}"
        aria-controls="MainProductQuickView-{{ section.id }}-{{ product.id }}"
      >
        {% render 'icon-close', size: 'large' %}
      </button>
      <div class="drawer__body h-full quick-view__content v-scrollable">
        <template id="MainProduct-quick-view__content">
          {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
          {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
          {% unless product.has_only_default_variant %}
            {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
          {% endunless %}
          {%- assign has_models = product.media | where: 'media_type', 'model' | first -%}
          {%- if has_models -%}
            <link
              id="ModelViewerStyle"
              rel="stylesheet"
              href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
              media="print"
              onload="this.media='all'"
            >
            <link
              id="ModelViewerOverride"
              rel="stylesheet"
              href="{{ 'component-model-viewer-ui.css' | asset_url }}"
              media="print"
              onload="this.media='all'"
            >
          {%- endif -%}
          {%- if enable_image_zoom -%}
            <link
              id="Photoswipe"
              rel="stylesheet"
              href="{{ 'photoswipe-component.css' | asset_url }}"
              media="print"
              onload="this.media='all'"
            >
          {%- endif -%}

          {%- if product.quantity_price_breaks_configured? -%}
            {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
            <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
            <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
          {%- endif -%}

          <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>

          {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
          <product-info
            data-section="{{ section.id }}"
            data-product-id="{{ product.id }}"
            data-update-url="false"
            data-url="{{ product.url }}"
            data-view-mode="quick-view"
            class="product flex flex-wrap {{ product_class }}"
          >
            <div class="product__media-wrapper w-full relative">
              <div class="product__media-container{% if enable_sticky_info %} sticky-element{% endif %}">
                {% render 'product-media-gallery',
                  media_layout: media_layout,
                  mobile_thumbnails: mobile_thumbnails,
                  variant_images: variant_images,
                  enable_image_zoom: enable_image_zoom,
                  context: 'quickview'
                %}
              </div>
            </div>
            <div class="product__info-wrapper w-full{% if quick_view_type == 'modal' %} v-scrollable h-full{% endif %}">
              {% render 'product-information-blocks',
                enable_sticky_info: enable_sticky_info,
                section: section,
                update_browser_history: false,
                show_details_link: true
              %}
            </div>
          </product-info>
          <product-recently-viewed data-product-id="{{ product.id }}" class="hidden"></product-recently-viewed>
          {%- if enable_image_zoom -%}
            <script src="{{ 'photoswipe.js' | asset_url }}" defer="defer"></script>
          {%- endif -%}

          {%- if product.media.size > 0 -%}
            <script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>
          {%- endif -%}

          {%- if has_models -%}
            <script type="application/json" id="ProductJSON-{{ product.id }}">
              {{ product.media | where: 'media_type', 'model' | json }}
            </script>
            <script src="{{ 'product-model.js' | asset_url }}" defer></script>
          {%- endif -%}
        </template>
      </div>
    </div>
  </quick-view-modal>
{%- endif -%}
