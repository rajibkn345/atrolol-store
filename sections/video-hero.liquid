{%- liquid
  assign poster = section.settings.video.preview_image
  assign video_height = section.settings.video_height
  assign video_mobile_height = section.settings.video_mobile_height
  assign container = section.settings.container
-%}
<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if container == 'full' -%}
      --padding-x: var(--page-padding);
    {%- endif -%}
    {%- if video_height == 'adapt' and poster != null %}
      {%- if poster != null -%}
        --media-ratio: {{ poster.aspect_ratio }};
      {%- else -%}
        --media-ratio: 16/9;
      {%- endif -%}
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .page-width--full {
    --page-padding: 0;
  }

  {%- if video_mobile_height == 'adapt' %}
    @media screen and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --media-ratio-mobile: {{ poster.aspect_ratio }};
      }
    }
  {% endif -%}
</style>

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div class="section video-hero section--padding">
  <div class="secton__container page-width page-width--{{ container }}">
    <div class="relative overflow-hidden{% unless container == 'full' %} blocks-radius{% endunless %}">
      <parallax-element
        class="block overflow-hidden"
        {% if section.settings.enable_parallax %}
          data-parallax="{% if section.settings.parallax_direction == 'vertical' %}0.8{% else %}0.3{% endif %}"
          data-parallax-direction="{{ section.settings.parallax_direction }}"
        {% endif %}
      >
        <motion-element
          data-motion="fade-in"
          class="block media mb:media--{{ video_mobile_height }}{% if video_height == 'adapt' %} media--adapt{% else %} media--height media--{{ video_height }}{% endif %}"
          hold
        >
          {%- render 'video',
            sizes: '100vw',
            video: section.settings.video,
            video_url: section.settings.video_url,
            muted: true,
            autoplay: true,
            loop: true,
            description: section.settings.description,
            show_play_button: false
          -%}
        </motion-element>
      </parallax-element>
      <div class="video-hero__content absolute inset-0">
        <div class="content-overlay content-overlay--{{ section.settings.content_position }} color-{{ section.settings.color_scheme }}{% if container == 'full' %} page-width{% endif %}">
          <div class="video-hero__content-wrapper relative z-1 rich-text text-{{ section.settings.content_alignment }}">
            {%- assign motion_delay = 50 -%}
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'subheading' %}
                  <motion-element
                    data-motion="fade-up"
                    data-motion-delay="{{ motion_delay }}"
                    class="block rich-text__subheading text-subheading"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.subheading }}
                  </motion-element>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'heading' %}
                  <h2 class="rich-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                    <motion-element data-motion="fade-up" data-motion-delay="{{ motion_delay }}" class="block">
                      {% render 'highlight-text',
                        hl_text: block.settings.heading,
                        hl_style: block.settings.highlight_style,
                        hl_font_style: block.settings.highlight_font_style,
                        hl_style_color: block.settings.highlight_style_color,
                        hl_text_color: block.settings.highlight_text_color
                      %}
                    </motion-element>
                  </h2>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'text' %}
                  <motion-element
                    data-motion="fade-up"
                    data-motion-delay="{{ motion_delay }}"
                    class="block rich-text__text rte {{ block.settings.text_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.text -}}
                  </motion-element>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {% when 'button' %}
                  {% if block.settings.button_label != blank %}
                    <motion-element
                      class="block"
                      data-motion="fade-up"
                      data-motion-delay="{{ motion_delay }}"
                    >
                      {% render 'button',
                        button_style: block.settings.button_style,
                        button_link: block.settings.button_link,
                        button_label: block.settings.button_label,
                        button_icon: block.settings.button_icon
                      %}
                    </motion-element>
                  {% endif %}
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div
        class="video-hero__overlay bg-overlay absolute inset-0"
        style="--color-overlay-alpha: {{ section.settings.overlay_opacity }};"
      ></div>
    </div>
  </div>
</div>
