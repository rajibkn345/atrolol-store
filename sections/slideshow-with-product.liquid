{%- liquid
  assign slide_height = section.settings.slide_height

  assign enable_slider = false

  if section.blocks.size > 1
    assign show_controls = section.settings.show_controls
    assign enable_slider = true
  endif

  assign first_block = section.blocks | first
  if first_block.type == 'video'
    assign aspect_ratio = first_block.settings.video.aspect_ratio | default: '16/9'
    assign aspect_ratio_mobile = first_block.settings.video_ratio_mobile | default: aspect_ratio
  else
    assign aspect_ratio = first_block.settings.background.aspect_ratio | default: 2.333
    assign aspect_ratio_mobile = aspect_ratio
    if first_block.settings.background_mobile != blank
      assign aspect_ratio_mobile = first_block.settings.background_mobile.aspect_ratio
    endif
  endif

  assign autoplay = 0
  if section.settings.autoplay
    assign autoplay = section.settings.autoplay_delay | times: 1000
  endif

  assign blocks_radius = 0

  case settings.blocks_corner_radius
    when 'slightly'
      assign blocks_radius = 10
    when 'round'
      assign blocks_radius = 20
  endcase
-%}
{% style %}
  #shopify-section-{{ section.id }} .page-width--full {
    --page-padding: 0;
  }
{% endstyle %}
{{ 'section-slideshow-with-product.css' | asset_url | stylesheet_tag: preload: true }}
<script src="{{ 'slideshow-with-product.js' | asset_url }}" defer="defer"></script>
<div
  class="section section-{{ section.id }} section--slideshow-with-product page-width page-width--{{ section.settings.container }}"
  data-id="{{ section.id }}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
>
  <slideshow-with-product
    class="block relative swiper slideshow-with-product-wrapper slideshow-with-product-height--{{ slide_height }}"
    aria-live="polite"
    aria-atomic="true"
    {% if autoplay > 0 %}
      data-autoplay="{{ autoplay }}"
    {% endif %}
    {% if enable_slider %}
      data-enable-slider="true"
      data-media-loading
    {% endif %}
    data-section-id="{{ section.id }}"
    style="{% if autoplay > 0 %}--swiper-autoplay-delay: {{ autoplay | plus: 1000 }}ms;{% endif %}"
    data-container="{{ section.settings.container }}"
    data-border-radius="{{ blocks_radius }}"
    data-zoom="10%"
  >
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        {%- assign enable_preload_image = block.settings.enable_preload_image -%}
        {%- liquid
          assign loading = 'lazy'
          assign fetchpriority = 'auto'
          if forloop.index == 1 and section.index < 2 or enable_preload_image
            assign loading = 'eager'
            assign fetchpriority = 'high'
          endif
        -%}
        <div
          class="swiper-slide"
          role="group"
          data-index="{{ forloop.index0 }}"
          aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
          data-type="{{ block.type }}"
          aria-label="{{ forloop.index }} {{ 'sections.slideshow.of' | t }} {{ forloop.length }}"
          tabindex="-1"
          data-color-scheme="color-{{ block.settings.color_scheme }}"
          {{ block.shopify_attributes }}
        >
          <div
            class="slideshow-with-product__item-wrap relative flex flex-wrap w-full z-0"
            {% if slide_height == 'adapt' %}
              style="--aspect-ratio: {{ aspect_ratio }};--aspect-ratio-mobile: {{ aspect_ratio_mobile }};"
            {% endif %}
          >
            <div class="slideshow-with-product__bg bg-image overflow-hidden z--1{% if section.settings.container != 'full' %} blocks-radius{% endif %}">
              {%- case block.type -%}
                {%- when 'video' -%}
                  <motion-element
                    hold
                    data-motion="zoom-out"
                    class="block media {% if slide_height == 'adapt' %} absolute inset-full{% else %} w-full h-full{% endif %}"
                    {% if slide_height == 'adapt' %}
                      style="--media-ratio: {{ aspect_ratio }}; --media-ratio-mobile: {{ aspect_ratio_mobile }};"
                    {% endif %}
                  >
                    {%- render 'video',
                      sizes: '100vw',
                      loading: loading,
                      fetchpriority: fetchpriority,
                      video: block.settings.video,
                      video_url: block.settings.video_url,
                      muted: true,
                      autoplay: false,
                      loop: true,
                      description: block.settings.video_description,
                      cover_image: block.settings.cover_image,
                      show_play_button: false
                    -%}
                  </motion-element>
                {%- else -%}
                  {%- liquid
                    assign background_default = block.settings.background
                    assign background_mobile = block.settings.background_mobile
                  -%}
                  <div class="slideshow-with-product__slide-bg absolute inset-full">
                    {%- if background_default == blank -%}
                      <motion-element
                        data-motion="zoom-out"
                        hold
                        class="slideshow-with-product__slide-placeholder h-full{% if background_mobile != blank %} hidden md:block{% else %} block{% endif %}"
                      >
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
                      </motion-element>
                    {%- endif -%}
                    {%- if background_default != blank or background_mobile != blank -%}
                      {%- capture sizes -%}
                        {%- if section.settings.container == 'full' -%}100vw{%- else -%}min({{ settings.page_width }}, 100vw){%- endif -%}
                      {%- endcapture -%}
                      <motion-element
                        class="w-full h-full block{% if background_default == blank %} md:hidden{% endif %}"
                        data-motion="zoom-out"
                        hold
                      >
                        <picture class="media media--height media-wrapper block w-full h-full relative overflow-hidden">
                          {%- if background_default != blank and background_mobile != blank -%}
                            <source
                              media="(max-width: 767px)"
                              srcset="{{ background_mobile | image_url: width: '400x' }} 400w, {{ background_mobile | image_url: width: '600x' }} 600w, {{ background_mobile | image_url: width: '800x' }} 800w, {{ background_mobile | image_url: width: '1000x' }} 1000w"
                              width="{{ background_mobile.width }}"
                              height="{{ background_mobile.height }}"
                            >
                          {%- endif -%}
                          {%- liquid
                            if background_default == blank
                              assign background_default = background_mobile
                            endif

                            assign background_default_height = background_default.width | divided_by: background_default.aspect_ratio
                            assign background_default_alt = background_default.alt | default: shop.name | escape
                          -%}
                          {{-
                            background_default
                            | image_url: width: background_default.width
                            | image_tag:
                              loading: loading,
                              width: background_default.width,
                              height: background_default_height,
                              alt: background_default_alt,
                              fetchpriority: fetchpriority,
                              sizes: sizes,
                              widths: '300,400,500,600,700,800,900,1000,1200,1300,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                              is: 'image-lazy'
                          -}}
                        </picture>
                      </motion-element>
                    {%- endif -%}
                  </div>
              {%- endcase -%}
              {%- if block.settings.image_overlay_opacity > 0 -%}
                <div
                  class="slideshow-with-product__overlay bg-overlay"
                  style="--color-overlay-alpha: {{ block.settings.image_overlay_opacity }}"
                ></div>
              {%- endif -%}
            </div>
            {%- liquid
              assign description_size = block.settings.description_size
              assign animate_delay = 50
            -%}
            <div
              class="slideshow-with-product__content flex flex-col page-width focus-none color-{{ block.settings.color_scheme }} bg-none w-full{% if slide_height == 'adapt' %} absolute inset-0{% endif %}"
              tabindex="-1"
            >
              <div class="flex flex-col h-full md:gap-6 gap-3">
                <div class="flex flex-col md:flex-row justify-between h-full flex-grow gap-8 md:gap-4">
                  <div class="slideshow-with-product__text rich-text text-left">
                    {%- unless block.settings.subheading == blank -%}
                      <div class="slideshow-with-product__subtitle rich-text__subheading text-subheading">
                        <motion-element
                          data-motion="fade-up"
                          data-motion-delay="{{ animate_delay }}"
                          data-text
                          hold
                          class="block"
                        >
                          {{- block.settings.subheading -}}
                        </motion-element>
                      </div>
                      {%- assign animate_delay = animate_delay | plus: 50 -%}
                    {%- endunless -%}
                    {%- unless block.settings.title == blank -%}
                      <h2 class="slideshow-with-product__title {{ block.settings.heading_size }} rich-text__heading">
                        <motion-element
                          data-motion="fade-up"
                          data-motion-delay="{{ animate_delay }}"
                          data-text
                          hold
                          class="block"
                        >
                          {% render 'highlight-text',
                            hl_text: block.settings.title,
                            hl_style: block.settings.highlight_style,
                            hl_font_style: block.settings.highlight_font_style,
                            hl_style_color: block.settings.highlight_style_color,
                            hl_text_color: block.settings.highlight_text_color
                          %}
                        </motion-element>
                      </h2>
                      {%- assign animate_delay = animate_delay | plus: 50 -%}
                    {%- endunless -%}
                    {%- unless block.settings.description == blank -%}
                      <motion-element
                        class="block slideshow-with-product__description {{ description_size }} rich-text__text rte"
                        data-motion="fade-up"
                        data-motion-delay="{{ animate_delay }}"
                        data-text
                        hold
                      >
                        {{- block.settings.description -}}
                      </motion-element>
                      {%- assign animate_delay = animate_delay | plus: 50 -%}
                    {%- endunless -%}
                    {%- unless block.settings.button_label == blank -%}
                      <div class="slideshow-with-product__buttons rich-text__button">
                        <motion-element
                          data-motion="fade-up"
                          data-motion-delay="{{ animate_delay }}"
                          data-text
                          hold
                          class="block"
                        >
                          {% render 'button',
                            button_style: block.settings.button_style,
                            button_link: block.settings.button_link,
                            button_label: block.settings.button_label,
                            button_icon: block.settings.button_icon
                          %}
                        </motion-element>
                      </div>
                      {%- assign animate_delay = animate_delay | plus: 50 -%}
                    {%- endunless -%}
                  </div>
                  <motion-element
                    data-motion="fade-up"
                    data-motion-delay="{{ animate_delay }}"
                    hold
                    class="slideshow-with-product__product flex items-end justify-end shrink-0"
                  >
                    {%- if block.settings.product != blank -%}
                      {% render 'card-product-boxed',
                        product: block.settings.product,
                        list_on_mobile: false,
                        image_ratio: section.settings.pcard_image_ratio,
                        image_sizes: '(max-width:767px) 50px, 120px',
                        quick_view_suffix: block.id,
                        enable_quick_add: false,
                        enable_quick_view: false,
                        section_index: section.index,
                        index: forloop.index
                      %}
                    {%- else -%}
                      {%- capture pcard_placeholder_class -%}
                      text-{{ settings.pcard_content_alignment }} color-{{ settings.pcard_color_scheme }}
                    {%- endcapture -%}
                      {% render 'card-product-placeholder',
                        image_ratio: section.settings.pcard_image_ratio,
                        pcard_style: 'boxed',
                        custom_class: pcard_placeholder_class
                      %}
                    {%- endif -%}
                  </motion-element>
                  {%- assign animate_delay = animate_delay | plus: 50 -%}
                </div>
                {%- if block.settings.bottom_heading != blank -%}
                  <div class="slideshow-with-product__bottom-content">
                    <motion-element
                      class="block "
                      data-motion="fade-up"
                      data-motion-delay="{{ animate_delay }}"
                      data-text
                      hold
                    >
                      <div class="h6 text-limit-1-line">
                        <span>{{ block.settings.bottom_heading }}</span>
                      </div>
                    </motion-element>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
    {%- if enable_slider and show_controls -%}
      <div class="swiper-controls swiper-controls--grouped swiper-controls--float-bottom swiper-controls--pagination-bullets bg-none flex items-center justify-center color-{{ section.blocks.first.settings.color_scheme }}">
        <button
          class="swiper-button swiper-button-prev swiper-button--blank"
          name="previous"
          aria-label="{{ 'general.slider.previous_slide' | t }}"
        >
          {% render 'icon-caret-left', size: 'small' %}
        </button>
        <div class="swiper-pagination"></div>
        <button
          class="swiper-button swiper-button-next swiper-button--blank"
          name="next"
          aria-label="{{ 'general.slider.next_slide' | t }}"
        >
          {% render 'icon-caret-right', size: 'small' %}
        </button>
      </div>
    {%- endif -%}
  </slideshow-with-product>
</div>

