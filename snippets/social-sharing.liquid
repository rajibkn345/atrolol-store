<div class="sharing__links flex flex-wrap items-center gap-3">
  {%- if settings.share_facebook -%}
    <a
      target="_blank"
      href="//www.facebook.com/sharer.php?u={{ shop.url | append: url }}"
      data-tooltip
    >
      <span class="tooltip pointer-events-none">{{ 'general.share.share_on_facebook' | t }}</span>
      <span class="btn btn--icon btn--icon-circle">{% render 'icon-facebook', size: 'large' %}</span>
    </a>
  {%- endif -%}
  {%- if settings.share_x -%}
    <a
      target="_blank"
      href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: url }}"
      data-tooltip
    >
      <span class="tooltip pointer-events-none">{{ 'general.share.share_on_x' | t }}</span>
      <span class="btn btn--icon btn--icon-circle">{% render 'icon-twitter', size: 'large' %}</span>
    </a>
  {%- endif -%}
  {%- if settings.share_pinterest -%}
    <a
      target="_blank"
      href="//pinterest.com/pin/create/button/?url={{ shop.url | append: url }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}"
      data-tooltip
    >
      <span class="tooltip pointer-events-none">{{ 'general.share.share_on_pinterest' | t }}</span>
      <span class="btn btn--icon btn--icon-circle">{% render 'icon-pinterest', size: 'large' %}</span>
    </a>
  {%- endif -%}
</div>
